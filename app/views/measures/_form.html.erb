
<%= form_for(@measure, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :name do |f| %>
      <%= f.label :name, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :abbreviation do |f| %>
      <%= f.label :abbreviation, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :abbreviation, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :field do |f| %>
      <%= f.label :field, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :field, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :description do |f| %>
      <%= f.label :description, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :description, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :units do |f| %>
      <%= f.label :units, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :units, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :target do |f| %>
      <%= f.label :target, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :target, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :operator do |f| %>
      <%= f.label :operator, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :operator, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :places do |f| %>
      <%= f.label :places, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :places, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

        <%= f.form_group :scale do |f| %>
      <%= f.label :scale, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :scale, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :local do |f| %>
      <%= f.label :local, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.check_box :local, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="form-actions col-md-offset-2 col-md-10">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to "Cancel", measures_path, class: 'btn' %>
  </div>
<% end %>

