<% @title = "Listing measures" %>

<% content_for :description do %>
<p>Edit this template in <code>app/views/Measures/index.html.erb</code>.</p>
<% end %>

<% content_for :actions do %>
<%= link_to new_measure_path, class: 'btn btn-primary btn-large pull-right' do %>
<%= fa_icon_tag "plus" %> Add Measure
<% end %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="sheet sheet-condensed">
        <div class="sheet-inner">
          <table class="table">
            <thead>
              <tr>
                                <th>Name</th>
                                <th>Abbreviation</th>
                                <th>Description</th>
                                <th>Units</th>
                                <th>Target</th>   
                                <th>Operator</th>
                                <th>Places</th>
                                <th>Scale</th>
                                <th>Local</th>
                                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @measures.each do |measure| %>
              <tr>
                                <td><%= measure.name %></td>
                                <td><%= measure.abbreviation %></td>
                                <td><%= measure.description %></td>
                                <td><%= measure.units %></td>
                                <td><%= measure.target %></td>
                                <td><%= measure.operator %></td>
                                <td><%= measure.places %></td>
                                <td><%= measure.scale %></td>
                                <td><%= measure.local %></td>
                                <td class="actions">
                  <%= link_to fa_icon_tag("eye"), measure, rel: 'tooltip', title: 'Show' %>
                  <%= link_to fa_icon_tag("pencil"), edit_measure_path(measure), rel: 'tooltip', title: 'Edit' %>
                  <%= link_to fa_icon_tag("trash-o"), measure, rel: 'tooltip', title: 'Delete',
                  data: { confirm: 'Are you sure?' }, method: :delete %>
                </td>
              </tr>
              <% end %>
              <% if @measures.length == 0 %>
              <tr><td colspan=42 class='text-center'>No measures.</td></tr>
              <% end %>
            </tbody>
          </table>
        </div><!-- /.sheet-inner -->
      </div><!-- /.sheet -->

                </div>
  </div>
</div>