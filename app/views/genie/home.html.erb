<div class="row">
    <div class="col-md-4 col-md-offset-4">
    <h2>Patients</h2>
 		<% @patients_today_me.each do |row| %>
 			<%= row['Surname'] %>
 		<% end %>


    <h2>Search Results</h2>
 		<% @patients_search.each do |patient| %>

 		<%= link_to patient['Surname']+","+patient['FirstName'] + " Whoa", patient_path(:id=> patient['id']) %>
 		<%= link_to "(Careplan)", careplan_patient_path(:id=> patient['id']) %>
 		<br>

 		<% end %>

   <h2>User details</h2>
   <%= @name %>
   <%= @id %>

</div>
</div>


