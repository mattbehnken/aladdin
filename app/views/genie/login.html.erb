<div class="row">
<div class="col-md-4 col-md-offset-4">
<h1>Aladdin</h1>

  <%= form_tag({action: "login"}, method: "post",class: "form-vertical" ) do %>
   <fieldset>
     <legend>Log in to Genie Database</legend>
     <div class="form-group">
       <%= label_tag :name, "Name", class: "form-label" %>
       <div class="controls">
        <%= text_field_tag :name, nil, class: "input-medium" %>  
         <p class="help-block">Use your normal Genie login name</p>
       </div>
     </div>
     <div class="form-group">
       <%= label_tag :password, "Password", class: "form-label"  %>
       <div class="controls">
         <%= password_field_tag :password, nil, class: "input-medium" %>
         <p class="help-block">Use your normal Genie password</p>
       </div>
     </div>
     <div class="form-actions">
       <%= submit_tag "Connect", class: "btn btn-primary" %>
     </div>
   </fieldset>
<% end %>
</div>
</div>


