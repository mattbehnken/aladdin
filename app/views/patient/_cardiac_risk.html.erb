

<table class='table table-striped table-bordered table-condensed'>
                       <tr><td width=50%>Blood Pressure</td><td><%= @bp.to_s +  "/" + @bpd.to_s if @bp > 0 %><%= status_symbol("orange","Not recorded") unless @bp > 0  %></td>
            <td>

            <%= status_symbol("orange",@bp_date.strftime("%d/%m/%Y")) if @bp > 0 and @bp_date != Date.today %>
            <%= status_symbol("green",@bp_date.strftime("%d/%m/%Y")) if @bp > 0 and @bp_date == Date.today %>

                
            </td></tr>
<tr>
<td width=50%> Cholesterol </td><td><%= @chol %></td><td></td>
</tr>
<tr>
<td width=50%> HDL (Good)Cholesterol </td><td><%= @hdl %></td><td></td>

</tr>
<% if params[:precheck] == "true" %>
<tr>
<td width=50%> ECG</td><td><%= @ecg.strftime("%d/%m/%Y") if @ecg > 0 %></td><td><%= distance_of_time_in_words(@ecg,Date.today)  if @ecg > 0 %><%= status_symbol("orange","Not done") if @ecg==0 %></td>

</tr>
<% end %>
<tr><td width=50%>Absolute Cardiac Risk</td>


<% if @score[:value] == 100 %>
	<td colspan=2> <%= status_symbol("red","high - " + @score[:cat]) %></td>
<% elsif @score[:value] ==200 %>
	<td colspan=2><%= status_symbol(@score[:color],@score[:cat]).html_safe %></td>
<% else %>

	<td><%= @score[:value].round(1) %>% </td><td><%= status_symbol(@score[:color],@score[:cat]) %></td>
<% end %>
</tr>
</table>

