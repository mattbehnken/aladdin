<div class="row">

    			<div class="col-md-4 col-md-offset-3">
    	 			<h2><%= @patient["FULLNAME"]%></h2>
    	 		</div>
    	 		<div class="col-md-5">
    	 			<div class="row">
    	 			<hr>
    	 			</div>

					<div class="row">
			         	<div class="col-md-5">
			         	DOB: 
			         	</div>
			         	<div class="col-md-7">
			         	<%= @patient['DOB'].strftime("%d/%m/%y") %>
			         	</div>
			         </div>
			         <div class="row">
			         	<div class="col-md-5">
			         	Address: 
			         	</div>
			         	<div class="col-md-7">
			         	<%= @patient['ADDRESSLINE1'] +","%>
			         	<%= @patient['ADDRESSLINE2']+"," if @patient['ADDRESSLINE2']!="" %>
			         	<%= @patient['SUBURB'] %>
			         	</div>
         			</div>
         			<div class="row">
    	 			<hr>
    	 			</div>
         		</div>
</div>	

<div class="row">
	<div class="col-md-6">
	<!--   Half the page for medications   -->

		<legend>Appointments</legend>
			<% if @appointments.count > 0  %>
		 		<% @appointments.each do |row| %>
					<%= row['PROVIDERNAME'] %> on <%= row['STARTDATE'].to_time.strftime("%b %d, %Y") %> at <%= row['STARTTIME'].strftime("%l:%M %p") %>
					<% if row['REASON'].include? "Care" %>
						in Annexe
					<% else %>
						in Clinic
					<% end %>
					<br>
				<% end %>
 			<% else %>
 				...............................
			<% end %>
		<hr>

		<legend>Medications</legend>
         		<% if @medications.count > 0 %>
         		(Please check with your phamacist that this medication list is up to date and let us know of any changes that should me made to our record)<br><br>
         			<%= meds_by_cat(@medications,"C","Long term") %>
         			<%= meds_by_cat(@medications,"S","Short term") %>
         			<%= meds_by_cat(@medications,"P","When required") %>
         			<%= meds_by_cat(@medications,"","Not defined") %>
         		<% else %>
         			Nil medications<p>
         		<% end %>
         <hr>
         <% if @measures %>
         <legend>Today's Measures</legend>
         	 <% if @measures['SYSTOLIC'] and  @measures['DIASTOLIC']%>
         	 <div class="row">

         		<div class="col-md-6 text-right">
         		Blood Pressure:
         		</div>
         		<div class="col-md-6">
         		<%= @measures['SYSTOLIC'].to_i %> / <%= @measures['DIASTOLIC'].to_i %>
         		</div>
         	 </div>
         	<% end %>
         	<% if @measures['WEIGHT']%>
         	 <div class="row">

         		<div class="col-md-6 text-right">
         		Weight:
         		</div>
         		<div class="col-md-6">
         		<%= @measures['WEIGHT'] %>
         		</div>
         	 </div>
         	<% end %>
         	<hr>
         	
        <% end %>

        <% if @tests.count> 1 %>
        <legend>Tests Ordered</legend>
        	<% @tests.each do |row| %>
	        	<b><%= row[0] %></b><br>
	        	<%= row[1] %><P>
        	<% end %>


        <% end %>
        <hr>
	</div>

	<div class="col-md-6">
		<legend>Consultation Summary</legend>
	<!--   Half the page for consult summary  -->

	        	 <%= @consult['CONSULTDATE'].to_time.strftime("%d/%m/%y") %>
         with <%= @consult['DOCTORNAME']%>

	    <h4><%= @consult['DIAGNOSIS']%></h4>


                 <ul>
        <% @problems.each do |problem| %>
        	<% if problem != @consult['DIAGNOSIS'] and problem != "Pathology"%>
        	<li><%= problem %></li>
        	<% end %>
        <% end %>
        </ul>



         <% if @tasks.count > 0 %>
        <hr>
        <legend>Tasks</legend>
        <ul>
        <% @tasks.each do |task| %>
        	<li><%= task %></li>
        <% end %>
        </ul>
        <% end %>
        <% if @meds.count > 0 %>
        <hr>
        <legend>Medication Changes</legend>
        <ul>
        <% @meds.each do |task| %>
        	<li><%= task %></li>
        <% end %>
        </ul>
    	<% end %>
        <% if @notes.count > 0 %>
        <hr>
        <legend>Notes</legend>
        <ul>
        <% @notes.each do |task| %>
        	<li><%= task %></li>
        <% end %>
        </ul>
    	<% end %>

    	<% if @plan.strip != "" %>
         <hr>
         <legend>Scripts and misc</legend>
         <%= simple_format(@plan) %>
         <% end %>
         <hr>
         <legend>Phone Calls</legend>
         Dr Lembke is available for phone calls most days from 1.30pm to 1.45pm, using number 66285950<p>
         <hr>
         <legend>Urgent Care</legend>
         The surgery is open from 8.30 -5.30 each day. Please phone 66280505 for urgent care outside of these hours.<p>         

	</div>



</div>



