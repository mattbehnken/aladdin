<% @title = "Listing measurements" %>

<% content_for :description do %>
<p>Edit this template in <code>app/views/measurements/index.html.erb</code>.</p>
<% end %>

<% content_for :actions do %>
<%= link_to new_measurement_path, class: 'btn btn-primary btn-large pull-right' do %>
<%= fa_icon_tag "plus" %> Add Measure value
<% end %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="sheet sheet-condensed">
        <div class="sheet-inner">
          <table class="table">
            <thead>
              <tr>
                                <th>Patient</th>
                                <th>Measure</th>
                                <th>Value</th>
                                <th>Measuredate</th>
                                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @measurements.each do |measurement| %>
              <tr>
                                <td><%= measurement.patient_id %></td>
                                <td><%= measurement.measure_id %></td>
                                <td><%= measurement.value %></td>
                                <td><%= measurement.measuredate %></td>
                                <td class="actions">
                  <%= link_to fa_icon_tag("eye"), measurement, rel: 'tooltip', title: 'Show' %>
                  <%= link_to fa_icon_tag("pencil"), edit_measurement_path(measurement), rel: 'tooltip', title: 'Edit' %>
                  <%= link_to fa_icon_tag("trash-o"), measurement, rel: 'tooltip', title: 'Delete',
                  data: { confirm: 'Are you sure?' }, method: :delete %>
                </td>
              </tr>
              <% end %>
              <% if @measurements.length == 0 %>
              <tr><td colspan=42 class='text-center'>No measurements.</td></tr>
              <% end %>
            </tbody>
          </table>
        </div><!-- /.sheet-inner -->
      </div><!-- /.sheet -->

                </div>
  </div>
</div>