
<%= form_for(@measurement, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :patient_id do |f| %>
      <%= f.label :patient_id, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :patient_id, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :measure_id do |f| %>
      <%= f.label :measure_id, class: 'control-label col-md-2' %>
      <div class='col-md-8'>

        <%= f.collection_select :measure_id, Measure.all, :id, :name,{include_blank: true},{class: 'form-control'} %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :value do |f| %>
      <%= f.label :value, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :value, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :measuredate do |f| %>
      <%= f.label :measuredate, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.date_select :measuredate, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="form-actions col-md-offset-2 col-md-10">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to "Cancel", measurements_path, class: 'btn' %>
  </div>
<% end %>

