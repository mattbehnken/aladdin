<% @title = "Showing measurement" %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="form-horizontal">
                <div class="form-group">
          <label class="col-md-2 form-label">Patient</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%= @measurement.patient_id %>
            </span>
          </div>
        </div>

                <div class="form-group">
          <label class="col-md-2 form-label">Measure</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%= @measurement.measure_id %>
            </span>
          </div>
        </div>

                <div class="form-group">
          <label class="col-md-2 form-label">Value</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%= @measurement.value %>
            </span>
          </div>
        </div>

                <div class="form-group">
          <label class="col-md-2 form-label">Measuredate</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%= @measurement.measuredate %>
            </span>
          </div>
        </div>

                <div class="form-actions col-md-offset-2">
          <%= link_to fa_icon_tag("pencil") + ' Edit', edit_measurement_path(@measurement), class: 'btn btn-primary' %>
          <%= link_to 'Back', measurements_path, class: 'btn' %>
        </div>
      </div>
    </div>
  </div>
</div>