
<%= form_for(@goal, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :title do |f| %>
      <%= f.label :title, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :title, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :description do |f| %>
      <%= f.label :description, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_area :description, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :condition_id do |f| %>
      <%= f.label :condition_id, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :condition_id, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :patient_id do |f| %>
      <%= f.label :patient_id, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :patient_id, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>


          <div class="checkbox col-md-10 col-md-offset-2">
          <p class="help-block">Check this box if this is a generic goal that should be added to the master template</p>

                  <label><input type="checkbox" value="1" name="mastercheck" id="master-box"  onClick="$('#master-select').toggle();">Add to master</label>
              </div>
          
 

    <%= f.form_group :master_id do |f| %>
    <div id='master-select' style="display:none;">
      <%= f.label :master_id, class: 'control-label col-md-2' %>
      <div class='col-md-8'>

        <%= f.collection_select :master_id, Master.all, :id, :name,{include_blank: true},{class: 'form-control'} %>
        <%= f.error_messages %>
      </div>
      </div>
    <% end %>


       

    <%= f.form_group :measure_id do |f| %>
      <%= f.label :measure_id, class: 'control-label col-md-2' %>
      <div class='col-md-8'>

        <%= f.collection_select :measure_id, Measure.all, :id, :name,{include_blank: true},{class: 'form-control'} %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :active do |f| %>
      <%= f.label :active, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :active, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :parent do |f| %>
      <%= f.label :parent, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :parent, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="form-actions col-md-offset-2 col-md-10">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to "Cancel", goals_path, class: 'btn' %>
  </div>
<% end %>

