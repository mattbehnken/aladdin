<% @title = "Listing phonetimes" %>


<% content_for :actions do %>
<%= link_to new_phonetime_path, class: 'btn btn-primary btn-large pull-right' do %>
<%= fa_icon_tag "plus" %> Add Phonetime
<% end %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="sheet sheet-condensed">
        <div class="sheet-inner">
          <table class="table">
            <thead>
              <tr>
                                <th>Doctor</th>
                                <th>Message</th>
                                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @phonetimes.each do |phonetime| %>
              <tr>
                                <td><%= @doctors_h[phonetime.doctor_id.to_s] %></td>
                                <td><%= phonetime.message %></td>
                                <td class="actions">
                  <%= link_to fa_icon_tag("eye"), phonetime, rel: 'tooltip', title: 'Show' %>
                  <%= link_to fa_icon_tag("pencil"), edit_phonetime_path(phonetime), rel: 'tooltip', title: 'Edit' %>
                  <%= link_to fa_icon_tag("trash-o"), phonetime, rel: 'tooltip', title: 'Delete',
                  data: { confirm: 'Are you sure?' }, method: :delete %>
                </td>
              </tr>
              <% end %>
              <% if @phonetimes.length == 0 %>
              <tr><td colspan=42 class='text-center'>No phonetimes.</td></tr>
              <% end %>
            </tbody>
          </table>
        </div><!-- /.sheet-inner -->
      </div><!-- /.sheet -->

                </div>
  </div>
</div>