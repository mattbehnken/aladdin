
<%= form_for(@phonetime, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <% if @phonetime.doctor_id == nil %>


  <div class="form-inputs">
    <%= f.form_group :doctor_id do |f| %>
      <%= f.label :doctor_id, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.select(:doctor_id,options_for_select(@new_doctors),class: 'form-control') %>
        <%= f.error_messages %>
      </div>
    <% end %>
<% else %>
      <%= f.hidden_field :doctor_id, :value => @phonetime.doctor_id  %>
<% end %>

    <%= f.form_group :message do |f| %>
      <%= f.label :message, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_area :message, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="form-actions col-md-offset-2 col-md-10">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to "Cancel", phonetimes_path, class: 'btn' %>
  </div>
<% end %>

