<% @title = "Showing pref" %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="form-horizontal">

                <div class="form-group">
          <label class="col-md-2 form-label"><%= @pref.name %></label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%= @pref.value %>
            </span>
          </div>
        </div>

                <div class="form-actions col-md-offset-2">
          <%= link_to fa_icon_tag("pencil") + ' Edit', edit_pref_path(@pref), class: 'btn btn-primary' %>
          <%= link_to 'Back', prefs_path, class: 'btn' %>
        </div>
      </div>
    </div>
  </div>
</div>